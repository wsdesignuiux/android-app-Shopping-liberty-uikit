<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Shopping">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_shoppings"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TAITTINGER"
        android:textColor="#0091ea"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

    <customfonts.MyTextView_Varela
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Brut Reserve"
        android:textColor="#1c252a"
        android:textSize="21sp" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/left_arrow"
    android:tint="#b7c4cb"
    android:id="@+id/left_nav"
    android:layout_marginRight="50dp"
    android:layout_gravity="center"/>

    <android.support.v4.view.ViewPager

        android:id="@+id/viewpager"
        android:layout_width="120dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:tint="#b7c4cb"
                android:id="@+id/right_nav"
                android:layout_marginLeft="50dp"

                android:layout_gravity="center"/>

        </LinearLayout>

    <customfonts.MyTextView_Varela
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="$140.65"
        android:textColor="#1c252a"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_rect"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
           >

            <Spinner
                android:id="@+id/sp_car_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/spinner_file"
                android:entries="@array/array_name"
                android:spinnerMode="dropdown"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cart_rect_shopping"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cartkrishna"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="10dp"
        android:background="#d0d8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:gravity="center"
        android:paddingTop="9dp"
        android:paddingBottom="3dp">

        <customfonts.MyTextView_Varela
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textColor="#1c252a"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="18sp" />
        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="#ffc107"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="3"
            android:isIndicator="false"/>

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="67"
            android:textColor="#0091ea"
            android:layout_marginRight="30dp"
            android:textSize="22sp" />





    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="10dp"
        android:background="#d0d8e8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="9dp"
        android:paddingBottom="3dp">

        <customfonts.MyTextView_Varela
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Viewed"
            android:textColor="#1c252a"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="18sp" />

        <customfonts.MyTextView_Varela
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All 25 Goods"
            android:textColor="#0091ea"
            android:layout_marginLeft="55dp"
            android:layout_weight="1"
            android:textSize="18sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="10dp"
        android:background="#d0d8e8"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview1">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:background="@drawable/rect_shopping">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="95dp"
                        android:id="@+id/shoppingimg"
                        android:src="@drawable/taittinger"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="20dp"/>

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="$62.35"
                        android:textSize="15sp"
                        android:id="@+id/shoppingtext"
                        android:layout_marginBottom="8dp"
                        android:textColor="#758692"/>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:background="@drawable/rect_shopping">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="95dp"
                            android:id="@+id/shoppingimg"
                            android:src="@drawable/rio2"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="20dp"/>

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="$62.35"
                            android:textSize="15sp"
                            android:id="@+id/shoppingtext"
                            android:layout_marginBottom="8dp"
                            android:textColor="#758692"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:background="@drawable/rect_shopping">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="95dp"
                            android:id="@+id/shoppingimg"
                            android:src="@drawable/budweiser"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="20dp"/>

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="$62.35"
                            android:textSize="15sp"
                            android:id="@+id/shoppingtext"
                            android:layout_marginBottom="8dp"
                            android:textColor="#758692"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:background="@drawable/rect_shopping">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="95dp"
                            android:id="@+id/shoppingimg"
                            android:src="@drawable/rio"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="20dp"/>

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="$62.35"
                            android:textSize="15sp"
                            android:id="@+id/shoppingtext"
                            android:layout_marginBottom="8dp"
                            android:textColor="#758692"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true">

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="loading"
            android:textColor="#b7c4cb"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/loading"
            android:layout_marginRight="10dp"/>


        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="content"
            android:textColor="#b7c4cb"/>


    </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>